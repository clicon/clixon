VPATH       	= @srcdir@
srcdir  	= @srcdir@
top_srcdir  	= @top_srcdir@
CC		= @CC@
CFLAGS  	= @CFLAGS@ 
LINKAGE         = @LINKAGE@
INSTALLFLAGS  	= @INSTALLFLAGS@ 
LDFLAGS 	= @LDFLAGS@

prefix 		= @prefix@
datarootdir	= @datarootdir@
exec_prefix 	= @exec_prefix@
bindir 		= @bindir@
libdir		= @libdir@
mandir		= @mandir@
libexecdir	= @libexecdir@
localstatedir	= @localstatedir@
sysconfdir	= @sysconfdir@
includedir	= @includedir@
HOST_VENDOR     = @host_vendor@
CLIXON_TLS      = @CLIXON_TLS@

SH_SUFFIX	= @SH_SUFFIX@
LIBSTATIC_SUFFIX = @LIBSTATIC_SUFFIX@

CLIXON_MAJOR    = @CLIXON_VERSION_MAJOR@
CLIXON_MINOR    = @CLIXON_VERSION_MINOR@

# Use this clixon lib for linking
ifeq ($(LINKAGE),dynamic)
	CLIXON_LIB	= libclixon$(SH_SUFFIX).$(CLIXON_MAJOR).$(CLIXON_MINOR)
else
	CLIXON_LIB	= libclixon$(LIBSTATIC_SUFFIX)
endif

# For dependency
LIBDEPS		= $(top_srcdir)/lib/src/$(CLIXON_LIB) 

LIBS          = -L$(top_srcdir)/lib/src $(top_srcdir)/lib/src/$(CLIXON_LIB) @LIBS@ 

ifeq ($(LINKAGE),dynamic)
	CPPFLAGS  	= @CPPFLAGS@ -fPIC
else
	CPPFLAGS  	= @CPPFLAGS@
endif
INCLUDES	= -I. -I$(top_srcdir)/lib/src -I$(top_srcdir)/lib -I$(top_srcdir)/include -I$(top_srcdir) @INCLUDES@

# Name of application
APPL	 = clixon_netconf
APPS     = $(APPL)

# Not accessible from plugin
APPSRC   = netconf_main.c
APPSRC  += netconf_rpc.c 
APPSRC  += netconf_filter.c
APPOBJ   = $(APPSRC:.c=.o)

ifdef CLIXON_TLS
APPL2	 = clixon_netconf_tls
APPS    += $(APPL2)
APPSRC2  = netconf_tls_main.c
APPOBJ2  = $(APPSRC2:.c=.o)
endif

all:	 $(APPS)

# Dependency of clixon library (LIBDEPS)
$(top_srcdir)/lib/src/$(CLIXON_LIB):
	(cd $(top_srcdir)/lib/src && $(MAKE) $(MFLAGS) $(CLIXON_LIB))

clean: 
	rm -f $(APPS) $(APPOBJ) $(ABBOBJ2) *.core
	rm -f *.gcda *.gcno *.gcov # coverage

distclean: clean
	rm -f Makefile *~ .depend

# Put demon in bin 
# Put other executables in libexec/
# Also create a libexec/ directory for writeable/temporary files.
# Put config file in etc/
install:	$(APPS)
	install -d -m 0755 $(DESTDIR)$(bindir)
	install -m 0755 $(INSTALLFLAGS) $(APPS) $(DESTDIR)$(bindir)

install-include:	clixon_netconf.h
	install -d -m 0755 $(DESTDIR)$(includedir)/clixon
	install -m 0644 $^ $(DESTDIR)$(includedir)/clixon

uninstall:
	(cd $(DESTDIR)$(bindir); rm -f $(APPS))
	rm -f $(DESTDIR)$(includedir)/clixon/*

.SUFFIXES:
.SUFFIXES: .c .o

.c.o:
	$(CC) $(INCLUDES) $(CPPFLAGS) -D__PROGRAM__=\"$(APPL)\" $(CFLAGS) -c $<

$(APPL) : $(APPOBJ) $(LIBDEPS)
	$(CC) $(LDFLAGS) -L. $^ $(LIBS) -o $@

ifdef CLIXON_TLS
netconf_tls_main.o: netconf_tls_main.c
	$(CC) $(INCLUDES) $(CPPFLAGS) -D__PROGRAM__=\"$(APPL2)\" $(CFLAGS) -c $<

$(APPL2) : $(APPOBJ2) $(LIBDEPS)
	$(CC) $(LDFLAGS) -L. $^ $(CFLAGS) $(LIBS) -o $@ # cflags for -g
endif

TAGS:
	find . -name '*.[chyl]' -print | etags -

depend:
	$(CC) $(DEPENDFLAGS) @DEFS@ $(INCLUDES) $(CFLAGS) -MM $(APPSRC) > .depend

#include .depend

