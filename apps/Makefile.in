VPATH       	= @srcdir@
srcdir  	= @srcdir@
top_srcdir  	= @top_srcdir@
CC		= @CC@
CFLAGS  	= @CFLAGS@ 
LDFLAGS 	= @LDFLAGS@
LIBS    	= @LIBS@

SHELL	= /bin/sh

SUBDIRS = cli backend dbctrl netconf

.PHONY: all clean depend install $(SUBDIRS)

all:	$(SUBDIRS)

depend:
	for i in $(SUBDIRS); \
	do (cd $$i; $(MAKE) $(MFLAGS) $@); done

$(SUBDIRS):
	(cd $@; $(MAKE) $(MFLAGS) all)

install-include:
	for i in $(SUBDIRS); \
	do (cd $$i ; $(MAKE) $(MFLAGS) $@); done; 

install:
	for i in $(SUBDIRS); \
	do (cd $$i; $(MAKE) $(MFLAGS) $@); done

uninstall:
	for i in $(SUBDIRS); \
	do (cd $$i; $(MAKE) $(MFLAGS) $@); done

clean:
	for i in $(SUBDIRS); \
	do (cd $$i; $(MAKE) $(MFLAGS) $@); done

distclean: clean
	rm -f Makefile *~ .depend
	for i in $(SUBDIRS); \
	do (cd $$i; $(MAKE) $(MFLAGS) $@); done

tags:
	find $(srcdir) -name '*.[chyl]' -print | etags -
